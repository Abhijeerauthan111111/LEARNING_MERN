<%- include('../partials/head.ejs') %>

</head>
<body class="min-h-screen bg-gray-50">
      
     <%- include('../partials/nav.ejs') %>

    <main class="container mx-auto px-4 py-12">
        <div class="max-w-md mx-auto text-center">
            <div class="text-8xl mb-8 hover:scale-110 transition-transform duration-300">üè†</div>
            <h1 class="text-4xl font-bold text-rose-500 mb-12"><%= editing ? "Edit" : "Add"%> Your Home</h1>

            <form action="/host/<%= editing ? `edit-home` : `add-home`%>" method="POST" class="space-y-6">

                    <input type="hidden" name="id"  value= "<%= editing ? home.id : `` %>" >
               
                        <input type="text"
                        placeholder="Name of your house"
                        name="housename"
                        value= "<%= editing ? home.housename : `` %>" 
                        class="w-full px-4 py-3 bg-white text-gray-900 rounded-lg border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200"
                        required>

                        <input type="text"
                        placeholder="Daily rent of your home"
                        name="price"
                        value= "<%= editing ? home.price : `` %>" 
                        class="w-full px-4 py-3 bg-white text-gray-900 rounded-lg border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200"
                        required>

                        <input type="text"
                        placeholder="Where is your home"
                        value= "<%= editing ? home.location : `` %>" 
                        name="location"
                        class="w-full px-4 py-3 bg-white text-gray-900 rounded-lg border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200"
                        required>

                        <input type="text"
                        placeholder="Rating of the house"
                        name="rating"
                        value= "<%= editing ? home.rating : `` %>" 
                        class="w-full px-4 py-3 bg-white text-gray-900 rounded-lg border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200"
                        required>

                        <input type="text"
                        placeholder="Photo of your house"
                        name="photourl"
                        value= "<%= editing ? home.photourl : `` %>" 
                        class="w-full px-4 py-3 bg-white text-gray-900 rounded-lg border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200"
                        required>

                        <input type="text"
                        placeholder="features of your house"
                        name="features"
                        value= "<%= editing ? home.features : `` %>" 
                        class="w-full px-4 py-3 bg-white text-gray-900 rounded-lg border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200"
                        required>

                        <input type="text"
                        placeholder="Description of your house"
                        name="description"
                        value= "<%= editing ? home.description : `` %>" 
                        class="w-full px-4 py-3 bg-white text-gray-900 rounded-lg border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-transparent transition duration-200"
                        required>
                
                <button type="submit" 
                    class="w-full px-6 py-3 bg-rose-500 text-white font-semibold rounded-lg hover:bg-rose-600 transform hover:-translate-y-0.5 transition duration-200 shadow-md">
                    <%= editing ? "Update" : "Add"%> Home
                </button>
            </form>
        </div>
    </main>
</body>
</html>