<%- include('../partials/head.ejs') %>
</head>
<body class="min-h-screen bg-gradient-to-tr from-gray-100 to-gray-200 text-gray-900">
      
     <%- include('../partials/nav.ejs')%>

    <main class="container mx-auto px-4 py-16">
        <div class="text-center mb-16">
            <div class="text-9xl mb-8 animate-bounce filter drop-shadow-lg">üè°</div>
            <h1 class="text-5xl font-extrabold text-rose-600 mb-8 tracking-tight leading-tight">
                Discover Your Dream Home
            </h1>
            <p class="text-gray-600 text-lg max-w-2xl mx-auto">Find the perfect place to call home from our carefully curated selection of beautiful properties.</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% homes.forEach(home => { %>
                <div class="bg-white backdrop-blur-sm bg-opacity-90 rounded-2xl overflow-hidden hover:shadow-2xl transition-all duration-300 flex flex-col p-6 border border-gray-200">
                    <div class="relative group">
                        <img src="<%= home.photourl %>" alt="Home Image" 
                             class="w-full h-64 object-cover mb-4 rounded-xl hover:scale-105 transition-transform duration-300">
                        <div class="absolute inset-0 bg-black bg-opacity-20 opacity-0 group-hover:opacity-100 transition-opacity rounded-xl"></div>
                    </div>

                    <h1 class="text-2xl font-bold text-gray-800 mb-3 text-left hover:text-rose-600 transition-colors">
                        <%= home.housename %>
                    </h1>

                    <p class="text-yellow-500 mb-3 text-left font-medium flex items-center gap-2">
                        <span class="text-lg">‚≠êÔ∏è</span>
                        <span class="text-gray-700"><%= home.rating %>/5</span>
                    </p>

                    <h2 class="text-gray-700 mb-4 text-left flex items-center gap-2">
                        <span class="text-rose-500">üìç</span>
                        <%= home.location %>
                    </h2>

                    <div class="flex justify-between items-center mt-auto pt-4 border-t border-gray-100">
                        <p class="text-2xl font-bold text-rose-600">‚Çπ<%= home.price %></p>
                        <div class="flex items-center gap-3">
                            <%- include('../partials/add_to_fav',{home:home}) %> 
                            <a href="/homes/<%= home._id %>" 
                               class="bg-rose-500 hover:bg-rose-600 text-white font-semibold rounded-lg px-6 py-2.5 transition-colors duration-300 shadow-sm">
                               View Details
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>
</body>
</html>