<% if(typeof errormessages !== "undefined" && errormessages && errormessages.length > 0){%>
    <div class="bg-red-100/80 backdrop-blur-sm rounded-xl p-6 border-2 border-red-200 shadow-lg">
        <div class="flex items-start">
            <div class="flex-shrink-0 mr-4">
                <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"></svg>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
            </div>
            <div class="flex-1">
                <h3 class="text-xl font-bold text-red-800 mb-3">Please address the following:</h3>
                <ul class="space-y-3"></ul>
                    <% errormessages.forEach(err=>{ %>
                        <li class="flex items-center text-red-700">
                            <span class="inline-block w-2 h-2 bg-red-500 rounded-full mr-3"></span>
                            <span class="text-base"><%= err%></span>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
<%}%>
