<%- include('../partials/head.ejs') %>
</head>
<body class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 text-gray-900">
      
     <%- include('../partials/nav.ejs')%>

    <main class="container mx-auto px-4 py-16">
        <div class="text-center mb-12">
            <div class="text-9xl mb-6 animate-bounce">üè°</div>
            <h1 class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-rose-600 to-pink-600 mb-6">
                Your Favourite Homes
            </h1>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% homes.forEach(home => { %>
                <div class="bg-white shadow-lg rounded-2xl overflow-hidden hover:shadow-2xl transition-all duration-300 flex flex-col p-6 relative transform hover:-translate-y-1">
                    <form action="/favourites/delete/<%= home._id %>" method="post" class="absolute top-3 right-3 z-10">
                        <button class="text-red-500 hover:text-red-600 font-bold text-xl bg-white rounded-full p-2 shadow-md hover:shadow-lg transition-all" title="Remove">‚úñÔ∏è</button>
                    </form>
                    <div class="overflow-hidden rounded-xl mb-4">
                        <img src="<%= home.photourl %>" alt="Home Image" class="w-full h-56 object-cover hover:scale-110 transition-transform duration-500">
                    </div>
                    <h1 class="text-2xl font-bold text-blue-900 mb-3 text-left"><%= home.housename %></h1>
                    <p class="text-yellow-500 mb-3 text-left flex items-center gap-1">
                        ‚≠êÔ∏è<span class="font-semibold"><%= home.rating %>/5</span>
                    </p>
                    <h2 class="text-gray-700 mb-4 text-left flex items-center gap-2">
                        üìç<span class="font-medium"><%= home.location %></span>
                    </h2>
                    <div class="flex justify-between items-center mt-auto pt-4 border-t border-gray-100">
                        <p class="text-2xl font-bold text-blue-600">‚Çπ<%= home.price %></p>
                        <a href="/homes/<%= home._id %>" 
                           class="bg-gradient-to-r from-rose-500 to-pink-500 text-white font-semibold rounded-lg px-6 py-2.5 hover:from-rose-600 hover:to-pink-600 transition-all duration-300 shadow-md hover:shadow-lg">
                            View Details
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>
</body>
</html>