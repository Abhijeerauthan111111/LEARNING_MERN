<%- include('partials/head.ejs') %>
</head>
<body class="min-h-screen bg-white text-gray-900">
      
     <%- include('partials/nav.ejs')%>

    <main class="container mx-auto px-4 py-8">
        <div class="text-center">
            <style>
                @keyframes revolveZoomTowards {
                    0% {
                        transform: rotate(0deg) scale(1) translateZ(0);
                    }
                    33% {
                        transform: rotate(120deg) scale(1.5) translateZ(50px);
                    }
                    66% {
                        transform: rotate(240deg) scale(1.5) translateZ(50px);
                    }
                    100% {
                        transform: rotate(360deg) scale(1) translateZ(0);
                    }
                }
                .revolve-zoom:hover {
                    animation: revolveZoomTowards 2s ease-in-out 1;
                }
            </style>
            <div class="text-8xl mb-4 revolve-zoom">üè°</div>
            <h1 class="text-4xl font-bold text-rose-500 mb-8">Welcome to AIRBNB</h1>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% homes.forEach(home => { %>
                <div class="bg-white shadow-md rounded-lg overflow-hidden">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= home.housename %></h2>
                        <p class="text-gray-600">Description of the house goes here.</p>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>
</body>
</html>