<%- include('../partials/head.ejs') %>
</head>
<body class="min-h-screen bg-gray-100 text-gray-900">
      
     <%- include('../partials/nav.ejs')%>

    <main class="container mx-auto px-4 py-10">
        <div class="text-center mb-10">
            <div class="text-9xl mb-4">üè°</div>
