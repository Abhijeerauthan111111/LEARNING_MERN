<%- include('../partials/head.ejs') %>

</head>
<body class="min-h-screen bg-gradient-to-br from-indigo-100 via-purple-50 to-pink-100">
      
     <%- include('../partials/nav.ejs') %>

    <main class="container mx-auto px-4 py-16">
        <div class="max-w-2xl mx-auto backdrop-blur-sm bg-white/80 rounded-3xl shadow-2xl p-12 border border-white/20">
            <div class="text-center">
               
                <h1 class="text-5xl font-extrabold bg-gradient-to-r from-rose-500 via-purple-500 to-indigo-500 bg-clip-text text-transparent mb-12 hover:scale-105 transition-transform leading-relaxed">
                   Reset Password
                </h1>
            </div>

            <form action="/resetpassword" method="POST" class="space-y-8">
                <div class="space-y-6">
                   
                    <%- include('../partials/errormessages.ejs') %>



                  
                   
                 <div class="space-y-6">
                    <div class="relative group">
                        <input 
                            disabled
                            value="<%= email %>"
                            class="w-full px-6 py-4 bg-gray-50/50 text-gray-900 rounded-2xl border-2 border-gray-200/50 shadow-inner focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-300 hover:bg-white/70 backdrop-blur-sm group-hover:shadow-lg"
                            >
                        <span class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-hover:scale-110 transition-transform"></span>
                    </div>
                    <div class="relative group">
                        <input type="hidden"
                            name="email"
                            value="<%= email %>"
                            class="w-full px-6 py-4 bg-gray-50/50 text-gray-900 rounded-2xl border-2 border-gray-200/50 shadow-inner focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-300 hover:bg-white/70 backdrop-blur-sm group-hover:shadow-lg"
                            >
                        <span class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-hover:scale-110 transition-transform"></span>
                    </div>

                    <div class="relative group">
                        <input type="text"
                           
                            name="otp"
                            placeholder="Enter OTP "
                            class="w-full px-6 py-4 bg-gray-50/50 text-gray-900 rounded-2xl border-2 border-gray-200/50 shadow-inner focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-300 hover:bg-white/70 backdrop-blur-sm group-hover:shadow-lg"
                            >
                        <span class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-hover:scale-110 transition-transform"></span>
                    </div>

                    <div class="relative group">
                        <input type="password"
                            placeholder="New Password"
                            name="password"                            
                            class="w-full px-6 py-4 bg-gray-50/50 text-gray-900 rounded-2xl border-2 border-gray-200/50 shadow-inner focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-300 hover:bg-white/70 backdrop-blur-sm group-hover:shadow-lg"
                            >
                        <span class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-hover:scale-110 transition-transform"></span>
                    </div>
                    <div class="relative group">
                        <input type="password"
                            placeholder="Confirm Password"
                            name="confirmpassword"
                            class="w-full px-6 py-4 bg-gray-50/50 text-gray-900 rounded-2xl border-2 border-gray-200/50 shadow-inner focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-300 hover:bg-white/70 backdrop-blur-sm group-hover:shadow-lg"
                            >
                        <span class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-hover:scale-110 transition-transform"></span>
                    </div>

                  
                
                <button type="submit" 
                    class="w-full px-8 py-4 bg-gradient-to-r from-rose-500 via-purple-500 to-indigo-500 text-white font-bold rounded-2xl hover:scale-105 transform transition duration-300 shadow-lg hover:shadow-2xl hover:from-rose-600 hover:via-purple-600 hover:to-indigo-600 relative overflow-hidden group">
                    <span class="absolute inset-0 bg-white/30 group-hover:animate-shine"></span>
                    <span class="relative">Save New Password</span>
                </button>
                <p class="text-center text-gray-600 mt-6">
                    Already have an account? 
                    <a href="/login" class="text-purple-500 hover:text-purple-700 font-semibold transition-colors">Sign in</a>
                </p>

            </form>
        </div>
    </main>
</body>
</html>